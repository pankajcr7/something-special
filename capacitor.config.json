{
  "appId": "com.rizzgpt.app",
  "appName": "RizzGPT",
  "webDir": "www",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "Keyboard": {
      "resize": "body",
      "resizeOnFullScreen": true
    },
    "StatusBar": {
      "backgroundColor": "#0a0a0f",
      "style": "DARK"
    },
    "SplashScreen": {
      "launchShowDuration": 1500,
      "backgroundColor": "#0a0a0f",
      "showSpinner": false,
      "androidScaleType": "CENTER_CROP"
    }
  }
}
